{
  "dashboard": {
    "title": "Multi-Sensor Real-Time Dashboard (104Hz)",
    "target_frequency": 104,
    "buffer_size": 256,
    "buffer_duration_seconds": 2.46
  },
  "data_source": {
    "type": "serial",
    "options": ["serial", "csv"],
    "serial": {
      "port": "COM3",
      "baudrate": 115200,
      "timeout": 1,
      "bytesize": 8,
      "parity": "none",
      "stopbits": 1
    },
    "csv": {
      "path": "data/sample_sensor_data.csv",
      "has_header": false,
      "delimiter": ",",
      "playback_speed": 1.0
    }
  },
  "sensors": {
    "top_imu": {
      "model": "LSM6DSO",
      "location": "top",
      "channels": {
        "accelerometer": {
          "name": "Top Accelerometer",
          "axes": ["x", "y", "z"],
          "unit": "m/s²",
          "range": [-8000, 8000],
          "indices": [1, 2, 3]
        },
        "gyroscope": {
          "name": "Top Gyroscope",
          "axes": ["x", "y", "z"],
          "unit": "°/s",
          "range": [-2000, 2000],
          "indices": [4, 5, 6]
        }
      }
    },
    "magnetometer": {
      "model": "ST Magnetometer",
      "location": "center",
      "channels": {
        "magnetic_field": {
          "name": "Magnetic Field",
          "axes": ["x", "y", "z"],
          "unit": "μT",
          "range": [-10000, 10000],
          "indices": [7, 8, 9]
        }
      }
    },
    "rear_imu": {
      "model": "LSM6DSM",
      "location": "rear",
      "channels": {
        "accelerometer": {
          "name": "Rear Accelerometer",
          "axes": ["x", "y", "z"],
          "unit": "m/s²",
          "range": [-8000, 8000],
          "indices": [10, 11, 12]
        },
        "gyroscope": {
          "name": "Rear Gyroscope",
          "axes": ["x", "y", "z"],
          "unit": "°/s",
          "range": [-2000, 2000],
          "indices": [13, 14, 15]
        }
      }
    },
    "force_sensor": {
      "model": "HLP A04",
      "location": "bottom",
      "channels": {
        "force_3axis": {
          "name": "3-Axis Force",
          "axes": ["x", "y", "z"],
          "unit": "ADC",
          "range": [0, 4096],
          "indices": [16, 17, 18]
        }
      }
    }
  },
  "data_format": {
    "total_fields": 19,
    "description": "CSV with comma-separated values",
    "columns": [
      "timestamp",
      "accel_x1", "accel_y1", "accel_z1",
      "gyro_x1", "gyro_y1", "gyro_z1",
      "mag_x", "mag_y", "mag_z",
      "accel_x2", "accel_y2", "accel_z2",
      "gyro_x2", "gyro_y2", "gyro_z2",
      "force_x", "force_y", "force_z"
    ]
  },
  "visualization": {
    "layout": "4_rows_stacked",
    "rows": [
      {
        "row": 1,
        "name": "Top IMU (LSM6DSO)",
        "columns": 3,
        "plots": [
          {"column": 1, "title": "Accelerometer", "data": "top_accel"},
          {"column": 2, "title": "Gyroscope", "data": "top_gyro"},
          {"column": 3, "title": "Accel Magnitude", "data": "top_mag"}
        ]
      },
      {
        "row": 2,
        "name": "Magnetometer (ST)",
        "columns": 3,
        "plots": [
          {"column": "1-3", "title": "Magnetic Field", "data": "magnetometer"}
        ]
      },
      {
        "row": 3,
        "name": "Rear IMU (LSM6DSM)",
        "columns": 3,
        "plots": [
          {"column": 1, "title": "Accelerometer", "data": "rear_accel"},
          {"column": 2, "title": "Gyroscope", "data": "rear_gyro"},
          {"column": 3, "title": "Accel Magnitude", "data": "rear_mag"}
        ]
      },
      {
        "row": 4,
        "name": "Force Sensor (HLP A04)",
        "columns": 3,
        "plots": [
          {"column": "1-2", "title": "3-Axis Force", "data": "force_sensor"},
          {"column": 3, "title": "System Status", "data": "stats_panel"}
        ]
      }
    ]
  },
  "colors": {
    "x_axis": "#FF0000",
    "y_axis": "#00AA00",
    "z_axis": "#0000FF",
    "magnitude": "#9933FF"
  },
  "ui": {
    "update_interval_ms": 100,
    "animation_fps": 10,
    "figure_size": [18, 14],
    "show_grid": true,
    "grid_alpha": 0.3,
    "line_width": 1.5
  }
}
